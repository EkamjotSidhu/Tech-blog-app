<div class="post-card my-5" id="{{post.id}}">
    <h3 class="post-header" id="postTitle">{{post.title}}</h3>
    <p class="p-3" id="postContent">{{post.content}}</p>
    <footer class="p-3">
        <p>Written By: {{post.user.username}}</p>
        <p>Date created: {{post.createdAt}}</p>
    </footer>
</div>

<h5>Comments</h5>
{{#each post.comments}}
{{> comments}}
{{else}}
<h3>No comments</h3>
{{/each}}

<button type="button" class="btn btn-outline-dark mt-5" id="addComment">Add New Comment</button>

<div class="post-card my-5 p-3 d-none" id="comment">
    <h3 id="userId" data-number="{{user_id}}">{{username}}'s Comment</h3>
    <input type="text" class="form-control" id="commentValue" placeholder="Write your comment">
    <button class="m-3 btn btn-outline-dark" id="commentBtn">Add Comment</button>
</div>


<script src="/js/comment.js"></script>